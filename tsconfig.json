{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src",
    "tests",
    "src/shared/infrastructure/db/prisma",
    "jest.setup.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
