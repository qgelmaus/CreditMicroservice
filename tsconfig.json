{
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"isolatedModules": true,
		"rootDir": "src",
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true
	},
	"include": ["src", "tests", "prisma", "jest.setup.ts"],
	"exclude": ["node_modules", "dist"]
}
